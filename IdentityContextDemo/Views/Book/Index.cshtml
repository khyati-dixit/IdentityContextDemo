
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="container py-4">
    <br />
    <h3 class="text-center text-uppercase">Users</h3><br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addUser">
        Add User
    </button>
    <hr />
    <div id="dataTable_wrapper"></div>
    <table id="dataTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>UserId</th>
                <th>FullName</th>
                <th>UserEmail</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

    </table>

</div>
<div class="modal fade" id="addUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add/Edit Book Details</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form id="AddUser" method="post" enctype="multipart/form-data">

                            <div class="form-group">

                                <label>Name</label>
                                <input class="form-control" id="Name" name="AName" type="text" />
                                <span id="nameval" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" id="Email" name="ALat" type="text" />
                                <span id="latval" class="field-validation-error"></span>
                            </div>

                            <input type="hidden" id="action" name="action" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" onclick="return InsertUser();">Submit</button>

            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/lib/datatables/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/js/ListDataTable.js"></script>
}



